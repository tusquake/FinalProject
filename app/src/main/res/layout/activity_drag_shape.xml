<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d3d3d3"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- ImageView for the question image -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:text="@string/match_shapes"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:textSize="25sp"
            android:textStyle="bold"
            />
        <!--  this is row 1   -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/questionImageView1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_centerInParent="true"
                android:src="@drawable/circle_image"
                android:contentDescription="question"
                android:tag="circle"
                android:layout_margin="8dp"
                android:clickable="true" />

            <ImageView
                android:id="@+id/questionImageView2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_centerInParent="true"
                android:src="@drawable/rectangle_image"
                android:contentDescription="question"
                android:tag="rectangle"
                android:layout_margin="8dp"
                android:clickable="true" />

        </LinearLayout>


        <!--  this is row 2   -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/questionImageView3"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_centerInParent="true"
                android:src="@drawable/square_image"
                android:contentDescription="question"
                android:tag="square"
                android:layout_margin="8dp"
                android:clickable="true" />

            <ImageView
                android:id="@+id/questionImageView4"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_centerInParent="true"
                android:src="@drawable/triangle_image"
                android:contentDescription="question"
                android:tag="triangle"
                android:layout_margin="8dp"
                android:clickable="true" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_margin="8dp"
            >

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/anim_congrats1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:visibility="visible"
                app:lottie_autoPlay="false"
                app:lottie_loop="false"
                app:lottie_rawRes="@raw/congrats_anim2" />
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/anim_correct"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:visibility="visible"
                app:lottie_autoPlay="false"
                app:lottie_loop="false"
                app:lottie_rawRes="@raw/correct_anim" />
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/anim_congrats2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:visibility="visible"
                app:lottie_autoPlay="false"
                app:lottie_loop="false"
                app:lottie_rawRes="@raw/congrats_anim2" />

        </LinearLayout>

        <!--  this is row 3   -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/answerImageView1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/pizza_image"
                android:contentDescription="answer"
                android:tag="triangle"
                android:clickable="true" />

            <ImageView
                android:id="@+id/answerImageView2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/clock_image"
                android:contentDescription="answer"
                android:tag="square"
                android:clickable="true" />

        </LinearLayout>

        <!--  this is row 4   -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/answerImageView3"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/board_image"
                android:contentDescription="answer"
                android:tag="rectangle"
                android:clickable="true" />

            <ImageView
                android:id="@+id/answerImageView4"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/tyre_image"
                android:contentDescription="answer"
                android:tag="circle"
                android:clickable="true" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
